<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="20dp"

    xmlns:app="http://schemas.android.com/apk/res-auto">
     <TextView
         android:id="@+id/tvCountryName"
         android:layout_width="wrap_content"
         android:text="Country Name"
         android:textColor="@color/black"
         android:layout_height="wrap_content"/>

     <ImageView
         android:id="@+id/ivFlag"
         android:layout_width="76dp"
         android:layout_height="73dp"
        android:paddingTop="10dp"
         android:src="@drawable/mm" />

     <LinearLayout
    android:layout_width="match_parent"
     android:orientation="vertical"
    android:layout_toRightOf="@id/ivFlag"
    android:layout_height="wrap_content">
     <LinearLayout
         android:id="@+id/llTitle"
         android:layout_weight="1"
         android:layout_toRightOf="@id/ivFlag"
         android:layout_width="match_parent"
         android:orientation="horizontal"
         android:layout_marginLeft="80dp"
         android:textAlignment="center"
         android:layout_height="0dp">
          <TextView
              android:id="@+id/tvCases"
              android:textAlignment="center"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginLeft="7dp"
              android:layout_weight="1"
              android:text="Cases" />
          <TextView
              android:id="@+id/tvRecovered"
              android:textAlignment="center"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginLeft="7dp"
              android:layout_weight="1"
              android:text="Recovered" />
          <TextView
              android:id="@+id/tvDeath"
              android:textAlignment="center"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginLeft="7dp"
              android:layout_weight="1"
              android:text="Deaths" />
     </LinearLayout>
     <LinearLayout
         android:id="@+id/llTotal"
         android:layout_weight="1"
         android:layout_toRightOf="@id/ivFlag"
         android:layout_width="match_parent"
         android:orientation="horizontal"
         android:layout_below="@id/llTitle"
         android:layout_height="0dp">
          <TextView
              android:id="@+id/tvTotal"
              android:layout_width="match_parent"
              android:text="Total"
              android:textAlignment="center"
              android:layout_weight="1"
              android:layout_toRightOf="@id/ivFlag"
              android:layout_height="wrap_content"/>
          <TextView
              android:id="@+id/tvTotalCases"
              android:layout_width="match_parent"
              android:textAlignment="center"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:text="Cases" />
          <TextView
              android:id="@+id/tvTotalRecovered"
              android:layout_width="match_parent"
              android:textAlignment="center"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:text="Recovered" />
          <TextView
              android:id="@+id/tvTotalDeath"
              android:layout_width="match_parent"
              android:textAlignment="center"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:text="Deaths" />
     </LinearLayout>
     <LinearLayout
         android:id="@+id/llToday"
         android:layout_weight="1"
         android:layout_toRightOf="@id/ivFlag"
         android:layout_width="match_parent"
         android:orientation="horizontal"
         android:layout_below="@id/llTotal"
         android:layout_height="0dp">
          <TextView
              android:id="@+id/tvToday"
              android:layout_width="match_parent"
              android:text="Today"
              android:textAlignment="center"
              android:layout_weight="1"
              android:layout_toRightOf="@id/ivFlag"
              android:layout_height="wrap_content"/>
          <TextView
              android:id="@+id/tvTodayCases"
              android:layout_width="match_parent"
              android:textAlignment="center"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:text="Cases" />
          <TextView
              android:id="@+id/tvTodayRecovered"
              android:layout_width="match_parent"
              android:textAlignment="center"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:text="Recovered" />
          <TextView
              android:id="@+id/tvTodayDeath"
              android:layout_width="match_parent"
              android:textAlignment="center"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:text="Deaths" />
     </LinearLayout>

</LinearLayout>


</RelativeLayout>